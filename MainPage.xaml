<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="auta.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="10" BackgroundColor="#E8F5E9">

            <Image x:Name="ImgAuto" Source="szary.png" HeightRequest="150"/>

            <Label Text="Konfigurator wyposażenia"
                   TextColor="White"
                   BackgroundColor="#1B5E20"
                   FontSize="25"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Padding="5"/>

            <Label Text="Wybierz kolor lakieru"
                   FontSize="18"
                   TextColor="#5D9B5D"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"/>

            <Picker x:Name="PickerKolor"
                    HorizontalOptions="Center"
                    Margin="0,5"
                    SelectedIndexChanged="PickerKolor_SelectedIndexChanged">
                <Picker.Items>
                    <x:String>szary</x:String>
                    <x:String>czerwony</x:String>
                    <x:String>zielony</x:String>
                    <x:String>żółty</x:String>
                    <x:String>granatowy</x:String>
                </Picker.Items>
            </Picker>

            <BoxView HeightRequest="1" Color="Gray"/>

            <Label Text="Felgi"
                   FontSize="18"
                   FontAttributes="Bold"
                   TextColor="#5D9B5D"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"/>

            <Grid BackgroundColor="#9AEB9A"
                  ColumnDefinitions="*,*"
                  Margin="0,10,0,10">

                <RadioButton x:Name="stalowe"
                             Content="Stalowe"
                             GroupName="felgi"
                             Grid.Column="0"
                             IsChecked="True"
                             CheckedChanged="Felgi_CheckedChanged"/>

                <RadioButton x:Name="aluminiowe"
                             Content="Aluminiowe"
                             GroupName="felgi"
                             Grid.Column="1"
                             CheckedChanged="Felgi_CheckedChanged"/>
            </Grid>

            <Label Text="Wybierz dodatkowe wyposażenie"
                   FontSize="18"
                   TextColor="#5D9B5D"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"/>

            <HorizontalStackLayout>
                <CheckBox x:Name="chek1" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Text="Czujniki parkowania" VerticalOptions="Center" TextColor="Black"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <CheckBox x:Name="chek2" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Text="Climatronic" VerticalOptions="Center"  TextColor="Black"/>
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <CheckBox x:Name="chek3" CheckedChanged="CheckBox_CheckedChanged"/>
                <Label Text="Nawigacja" VerticalOptions="Center"  TextColor="Black"/>
            </HorizontalStackLayout>

            <BoxView HeightRequest="1" Color="Gray"/>

            <Label Text="Wycena"
                   FontAttributes="Bold"
                   TextColor="#5D9B5D"
                   FontSize="18"
                   HorizontalOptions="Center"
                   Margin="0,12,0,0"/>

            <Label x:Name="price"
                   HorizontalTextAlignment="End"
                   FontSize="16"
                   TextColor="Black"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
